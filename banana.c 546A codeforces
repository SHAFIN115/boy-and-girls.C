#include<stdio.h>
int main()
{
    int a[100000]={},k,n,w,b,i,q=0;
    scanf("%d %d %d",&k,&n,&w);
    for(i=1;i<=w;i++)
       {
        a[i]=k*i;
        q=q+a[i];
       }
    b=q-n;
    if(b<=0)
        {
            printf("0");
        }
    else
        {
            printf("%d\n",b);
        }
    return 0;

}
